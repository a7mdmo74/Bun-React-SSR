{
  "name": "@a7mdmo74/bun-react-ssr",
  "version": "2.0.1",
  "description": "A full-stack Bun framework combining React SSR, backend APIs, middleware, and Tailwind CSS with shadcn UI components",
  "author": "a7mdmo74",
  "license": "MIT",
  "keywords": [
    "bun",
    "react",
    "ssr",
    "server-side-rendering",
    "full-stack",
    "fullstack",
    "backend",
    "api",
    "middleware",
    "tailwind",
    "tailwindcss",
    "shadcn",
    "shadcn-ui",
    "typescript",
    "javascript",
    "framework"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/a7mdmo74/Bun-React-SSR"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "lib",
    "middleware",
    "README.md",
    "package.json"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build index.ts --outdir dist --target bun",
    "tailwind:build": "bun x @tailwindcss/cli -i ./src/styles.css -o ./src/assets/tailwind.css --watch",
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/cli": "^4.1.17",
    "@types/react-dom": "^19.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0"
  }
}
